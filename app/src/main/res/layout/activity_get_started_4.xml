<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_marginTop="235dp"
        android:src="@drawable/logo_get_started_4" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Edukasi"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginTop="134dp"
        android:textSize="31dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Satu platform membuka jendela dunia.
"
        android:lineSpacingMultiplier="0.8"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginTop="172dp"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Ilmu pertanian diperdalam untuk meningkatkan
kesuksesan anda menekuni bidang ini
"
        android:lineSpacingMultiplier="0.8"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginTop="186dp"
        android:textSize="13sp"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="516dp">
        <Button
            android:id="@+id/btnGetStarted2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/gradient_ellipse"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnGetStarted3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="21dp"
            android:background="@drawable/gradient_ellipse"
            android:onClick="nextTransition"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnGetStarted4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="42dp"
            android:background="@drawable/green_elipse"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnGetStarted5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="63dp"
            android:background="@drawable/gradient_ellipse"
            android:textColor="@color/white" />

    </RelativeLayout>
    <Button
        android:id="@+id/btnNext"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="542dp"
        android:background="@drawable/arrow_right_green_elipse"
        android:fontFamily="@font/inter_bold"
        android:onClick="nextTransition"/>


</RelativeLayout>