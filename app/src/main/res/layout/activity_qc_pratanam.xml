<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailPupukActivity"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:id="@+id/backToHalamanBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_left_back_foreground"
            android:layout_marginTop="28dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        </RelativeLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_save"
            android:layout_alignParentRight="true"
            android:layout_marginTop="45dp"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Quality Control"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="175dp"
            android:layout_alignParentLeft="true"/>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header">

        <RelativeLayout
            android:id="@+id/bigPic"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_cuaca"
            android:layout_width="315dp"
            android:layout_height="100dp"
            android:layout_marginTop="45dp">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:background="@drawable/card_bg_radius"
                android:layout_width="81dp"
                android:layout_marginLeft="15dp"
                android:layout_height="78dp">
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Padi Pera"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Minggu yang lalu"
                android:textSize="10sp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/white"
                android:layout_marginTop="45dp"/>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/title"
            android:layout_below="@+id/bigPic"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="70dp"
            android:layout_height="wrap_content">

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/groupInfo"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/Info1"
                    android:layout_alignParentLeft="true"
                    android:layout_width="84dp"
                    android:background="@drawable/bg_list_catatan"
                    android:layout_height="87dp">

                    <ImageView
                        android:layout_marginTop="2dp"
                        android:id="@+id/imgInfo1"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/plan"/>

                    <TextView
                        android:id="@+id/txtInfo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgInfo1"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="JENIS TANAH"
                        android:textColor="#013220"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtInfo1"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Tenis Gembur"
                        android:textColor="#0D986A"
                        android:textSize="10sp" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/Info2"
                    android:layout_marginHorizontal="15dp"
                    android:layout_toRightOf="@+id/Info1"
                    android:layout_width="84dp"
                    android:background="@drawable/bg_list_catatan"
                    android:layout_height="87dp">
                    <ImageView
                        android:layout_marginTop="8dp"
                        android:id="@+id/imgInfo2"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/logo_panen"/>

                    <TextView
                        android:id="@+id/txtInfo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgInfo2"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="SUHU"
                        android:textColor="#013220"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtInfo2"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="> 30Â°C"
                        android:textColor="#0D986A"
                        android:textSize="10sp" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/Info3"
                    android:layout_toRightOf="@+id/Info2"
                    android:layout_width="84dp"
                    android:background="@drawable/bg_list_catatan"
                    android:layout_height="87dp">
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:id="@+id/imgInfo3"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/logo_weather"/>

                    <TextView
                        android:id="@+id/txtInfo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgInfo3"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="CURAH HUJAN"
                        android:textColor="#013220"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtInfo3"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="TINGGI"
                        android:textColor="#0D986A"
                        android:textSize="10sp" />

                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/groupDeskripsi"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="60dp"
            android:layout_below="@+id/groupInfo"
            android:layout_width="152dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleDeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_subrayada"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="DESKRIPSI" />
            <TextView
                android:layout_below="@+id/titleDeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:fontFamily="@font/inter_regular"
                android:text="Jumlah Benih: 50 Benih      Media Tanam: Serbuk Kelapa"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="260dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="200dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_subrayada"
                android:text="LOKASI SAWAH"
                android:textColor="#000000"
                android:textSize="20sp"/>
"
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/lokasi_sawah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dp"
            android:layout_marginTop="200dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:background="@drawable/grey_card_radius"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="450dp"
            android:id="@+id/bgTabLayout"
            android:layout_width="387dp"
            android:layout_height="45dp"
            android:background="@drawable/bg_fragment_beranda">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="324dp"
                android:layout_height="35dp"
                android:layout_marginLeft="15dp"
                app:tabTextAppearance="@style/TabTextStyle">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pra Tanam"/>
                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tanam"/>
                <com.google.android.material.tabs.TabItem
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pasca Tanam"/>

            </com.google.android.material.tabs.TabLayout>
        </RelativeLayout>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bgTabLayout"/>
    </RelativeLayout>
</RelativeLayout>
