<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/arrow_left_back_foreground" />

        <RelativeLayout
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="88dp"
                android:layout_height="46dp"
                android:background="@drawable/logo_ud_tani_rejo" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="UD. Tani Rejo"
                android:textColor="@color/button_green"
                android:textSize="24dp" />
        </RelativeLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="35dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/logo_ringtone_foreground" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation ="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="234dp"
                    android:layout_height="234dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo_star"/>


                <TextView
                    android:id="@+id/textView2"
                    android:layout_marginTop="200dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_bold"
                    android:text="RATING KUALITAS PADI"
                    android:layout_marginBottom="300dp"
                    android:textColor="#000000"
                    android:textSize="20sp">
                </TextView>


            <RelativeLayout
                android:id="@+id/card_txt"
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_txt_pesan"
                android:layout_marginTop="100dp">

                <TextView
                    android:id="@+id/headerBintang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bagaimana Kualitas Padi yang anda tanam"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#616161"
                    android:textSize="11sp"
                    android:layout_marginTop="10dp"/>
                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/headerBintang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bintang_lima"/>



            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/card2_txt"
                android:layout_below="@+id/card_txt"
                android:layout_width="280dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_txt_pesan"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beri Pendapat Anda Tentang padi ini"
                    android:textColor="#5F5F5F"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="100dp"/>

            </RelativeLayout>




            </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

