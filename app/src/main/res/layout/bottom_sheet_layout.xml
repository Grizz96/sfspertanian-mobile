<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/top_bg"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="Tambah Pencatatan"
            android:padding="8dp"
            android:textColor="@color/text_grey"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/logo_close_grey_foreground"
            android:layout_marginLeft="250dp"
            android:id="@+id/cancelButton"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:padding="8dp"
            android:background="@drawable/inputbox_background"
            android:id="@+id/drop_pencatatan_semai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:entries="@array/jadwal_semai_array"
            android:prompt="@string/dropdown_jadwal_semai"/>
        <EditText
            android:id="@+id/menulisCatatan"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="top"
            android:hint="Mulai Menulis"
            android:layout_below="@id/drop_pencatatan_semai"
            android:layout_width="match_parent"
            android:layout_height="159dp"
            android:background="@drawable/inputbox_background"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_below="@+id/menulisCatatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:drawableRight="@drawable/logo_time"
                android:fontFamily="@font/inter_regular"
                android:textColor="#616161"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingTop="13dp"
                android:background="@drawable/inputbox_background"
                android:id="@+id/timePickerButton"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Pilih Waktu"/>

            <!-- Button untuk memilih tanggal -->
            <Button
                android:paddingLeft="10dp"
                android:fontFamily="@font/inter_regular"
                android:paddingRight="2dp"
                android:drawableEnd="@drawable/logo_date"
                android:textAllCaps="false"
                android:textColor="#616161"
                android:gravity="left"
                android:paddingTop="13dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/inputbox_background"
                android:id="@+id/datePickerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pilih Tanggal"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/corner_button_shadow"
            android:textStyle="bold"
            android:text="Simpan"
            android:paddingBottom="5dp"
            android:textColor="@color/white"
            android:onClick="startGetStartedTransition"/>
        <Button
            android:layout_marginTop="5dp"
            android:layout_below="@id/btnSimpan"
            android:id="@+id/btnBatal"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:textStyle="bold"
            android:text="Batal"
            android:paddingBottom="20dp"
            android:textColor="@color/text_grey"
            android:onClick="startGetStartedTransition"/>

    </RelativeLayout>

</LinearLayout>