<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="18dp">

            <TextView
                android:id="@+id/titleCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Persiapan Tempat"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/subTitleCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleCard"
                android:fontFamily="@font/poppins"
                android:text="Detail: Lokasi berada di rumah pak budi"
                android:textColor="#12121D"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/timeCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subTitleCard"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:text="07.00 WIB"
                android:textColor="#12121D"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/DateCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/timeCard"
                android:fontFamily="@font/poppins"
                android:text="20 September 2023"
                android:textColor="#12121D"
                android:textSize="11sp" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
