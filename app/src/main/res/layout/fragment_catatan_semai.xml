<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentCatatanSemai">
    <RelativeLayout
        android:id="@+id/kosong"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </RelativeLayout>

        <ScrollView
            android:layout_below="@+id/kosong"
            android:layout_width="match_parent"
            android:layout_height="550dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginVertical="5dp"
                    android:id="@+id/list1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/card_bg_radius">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp">
                        <TextView
                            android:id="@+id/titleCard1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Persiapan Tempat"/>
                        <TextView
                            android:textColor="#12121D"
                            android:id="@+id/subTitleCard1"
                            android:layout_below="@id/titleCard1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail: Lokasi berada di rumah pak budi"
                            android:fontFamily="@font/poppins"
                            android:textSize="11sp"/>
                        <TextView
                            android:id="@+id/timeCard1"
                            android:layout_marginTop="15dp"
                            android:textColor="#12121D"
                            android:layout_below="@id/subTitleCard1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="07.00 WIB"
                            android:fontFamily="@font/poppins"
                            android:textSize="9sp"/>
                        <TextView
                            android:textColor="#12121D"
                            android:id="@+id/DateCard1"
                            android:layout_below="@id/timeCard1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 September 2023"
                            android:fontFamily="@font/poppins"
                            android:textSize="11sp"/>


                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginVertical="5dp"
                    android:layout_below="@id/list1"
                    android:id="@+id/list2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/card_bg_radius">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp">
                        <TextView
                            android:id="@+id/titleCard2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Persiapan Tempat"/>
                        <TextView
                            android:textColor="#12121D"
                            android:id="@+id/subTitleCard2"
                            android:layout_below="@id/titleCard2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail: Lokasi berada di rumah pak budi"
                            android:fontFamily="@font/poppins"
                            android:textSize="11sp"/>
                        <TextView
                            android:id="@+id/timeCard2"
                            android:layout_marginTop="15dp"
                            android:textColor="#12121D"
                            android:layout_below="@id/subTitleCard2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="07.00 WIB"
                            android:fontFamily="@font/poppins"
                            android:textSize="9sp"/>
                        <TextView
                            android:textColor="#12121D"
                            android:id="@+id/DateCard2"
                            android:layout_below="@id/timeCard2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 September 2023"
                            android:fontFamily="@font/poppins"
                            android:textSize="11sp"/>


                    </RelativeLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginVertical="5dp"
                    android:layout_below="@id/list2"
                    android:id="@+id/list3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/card_bg_radius">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp">
                        <TextView
                            android:id="@+id/titleCard3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:text="Persiapan Tempat"/>
                        <TextView
                            android:textColor="#12121D"
                            android:id="@+id/subTitleCard3"
                            android:layout_below="@id/titleCard3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail: Lokasi berada di rumah pak budi"
                            android:fontFamily="@font/poppins"
                            android:textSize="11sp"/>
                        <TextView
                            android:id="@+id/timeCard3"
                            android:layout_marginTop="15dp"
                            android:textColor="#12121D"
                            android:layout_below="@id/subTitleCard3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="07.00 WIB"
                            android:fontFamily="@font/poppins"
                            android:textSize="9sp"/>
                        <TextView
                            android:textColor="#12121D"
                            android:id="@+id/DateCard3"
                            android:layout_below="@id/timeCard3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 September 2023"
                            android:fontFamily="@font/poppins"
                            android:textSize="11sp"/>


                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/logo_add_white_foreground"
            android:contentDescription="@string/submit" />

</RelativeLayout>
