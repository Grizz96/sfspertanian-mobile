<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".literasiPraTanam">
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:id="@+id/horizontalScrollViewLocal">
        <androidx.cardview.widget.CardView
            android:layout_width="133dp"
            android:layout_height="155dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:layout_width="133dp"
                android:layout_height="92dp"
                android:scaleType="centerCrop"
                android:id="@+id/gridImageLocal"/>
            <TextView
                android:layout_marginTop="95dp"
                android:layout_width="133dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="Pemupukan yang Tepat &amp; Berimbang untuk Tanaman Padi"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:lineSpacingMultiplier="0.8"
                android:textSize="10sp"/>
            <TextView
                android:layout_marginTop="140dp"
                android:layout_width="133dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="20 Agustus 2023"
                android:fontFamily="@font/poppins"
                android:textColor="@color/title_fragment"
                android:lineSpacingMultiplier="0.8"
                android:textSize="8sp"/>
        </androidx.cardview.widget.CardView>

    </HorizontalScrollView>

    <TextView
        android:id="@+id/txtArtikelVideoLain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalScrollViewLocal"
        android:text="Artikel dan Video Lainnya"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textColor="@color/title_literasi_beranda"
        android:fontFamily="@font/poppins_bold"/>

    <HorizontalScrollView

        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_below="@+id/txtArtikelVideoLain"
        android:id="@+id/horizontalScrollViewGlobal">


        <androidx.cardview.widget.CardView
            android:layout_width="133dp"
            android:layout_height="155dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp">
            <ImageView
                android:layout_width="133dp"
                android:layout_height="92dp"
                android:scaleType="centerCrop"
                android:id="@+id/gridImageGlobal"/>
            <TextView
                android:layout_marginTop="95dp"
                android:layout_width="133dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="Pemupukan yang Tepat &amp; Berimbang untuk Tanaman Padi"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/black"
                android:lineSpacingMultiplier="0.8"
                android:textSize="10sp"/>
            <TextView
                android:layout_marginTop="140dp"
                android:layout_width="133dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="20 Agustus 2023"
                android:fontFamily="@font/poppins"
                android:textColor="@color/title_fragment"
                android:lineSpacingMultiplier="0.8"
                android:textSize="8sp"/>
        </androidx.cardview.widget.CardView>

    </HorizontalScrollView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horizontalScrollViewGlobal"
        android:text="Pra Tanam"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textColor="@color/text_grey"
        android:fontFamily="@font/poppins_bold"/>

</RelativeLayout>