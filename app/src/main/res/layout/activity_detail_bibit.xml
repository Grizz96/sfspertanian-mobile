<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:id="@+id/backToHalamanBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_left_back_foreground"
            android:layout_marginTop="28dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="Rincian"
                android:textColor="@color/button_green"

                android:textSize="24dp" />
        </RelativeLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_save"
            android:layout_alignParentRight="true"
            android:layout_marginTop="45dp"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header">
        <RelativeLayout
            android:id="@+id/bigPic"
            android:layout_centerHorizontal="true"
            android:background="@drawable/card_bg_radius"
            android:layout_width="278dp"
            android:layout_height="155dp">

            <ImageView
                android:id="@+id/gambar_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/title"
            android:layout_below="@+id/bigPic"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="70dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="42dp">
                <TextView
                    android:id="@+id/bibitNameTextView"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="estimasi biaya:"
                    android:textColor="#0D986A"/>
                <TextView
                    android:id="@+id/hargaTextView"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="/kg"
                    android:textColor="#0D986A"/>


            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/groupInfo"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout

                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/Info1"
                    android:layout_alignParentLeft="true"
                    android:layout_width="84dp"
                    android:background="@drawable/bg_list_catatan"
                    android:layout_height="87dp">

                    <ImageView
                        android:layout_marginTop="2dp"
                        android:id="@+id/imgInfo1"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/plan"/>

                    <TextView
                        android:id="@+id/txtInfo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgInfo1"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="6dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="JENIS TANAH"
                        android:textColor="#013220"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/jenistanahtv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtInfo1"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Tenis Gembur"
                        android:textColor="#0D986A"
                        android:textSize="10sp" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/Info2"
                    android:layout_marginHorizontal="15dp"
                    android:layout_toRightOf="@+id/Info1"
                    android:layout_width="84dp"
                    android:background="@drawable/bg_list_catatan"
                    android:layout_height="87dp">
                    <ImageView
                        android:layout_marginTop="8dp"
                        android:id="@+id/imgInfo2"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/logo_panen"/>

                    <TextView
                        android:id="@+id/txtInfo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgInfo2"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="PANEN"
                        android:textColor="#013220"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/estimasipanentv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtInfo2"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="3-5 Bulan"
                        android:textColor="#0D986A"
                        android:textSize="10sp" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/Info3"
                    android:layout_toRightOf="@+id/Info2"
                    android:layout_width="84dp"
                    android:background="@drawable/bg_list_catatan"
                    android:layout_height="87dp">
                    <ImageView
                        android:layout_marginTop="5dp"
                        android:id="@+id/imgInfo3"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/logo_weather"/>

                    <TextView
                        android:id="@+id/txtInfo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgInfo3"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="CUACA"
                        android:textColor="#013220"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/cuacatv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtInfo3"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Hujan Sedang"
                        android:textColor="#0D986A"
                        android:textSize="10sp" />

                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/groupDeskripsi"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:layout_below="@+id/groupInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleDeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_subrayada"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="DESKRIPSI" />
            <TextView
                android:id="@+id/deskripsiTextView"
                android:layout_below="@+id/titleDeskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:fontFamily="@font/inter_regular"
                android:text=""/>
            <TextView
                android:id="@+id/kelebihan"
                android:layout_below="@+id/deskripsiTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:fontFamily="@font/inter_regular"
                android:text=""/>
            <TextView
                android:id="@+id/kekurangan"
                android:layout_below="@+id/kelebihan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:fontFamily="@font/inter_regular"
                android:text=""/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/groupFoto"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/groupDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginHorizontal="20dp"
                android:id="@+id/titleFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_subrayada"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="FOTO BIBIT" />
            <HorizontalScrollView
                android:layout_below="@id/titleFoto"
                android:layout_width="match_parent"
                android:layout_height="113dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/cardFoto1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/foto1"
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="133dp"
                            android:layout_height="94dp"
                            android:background="@drawable/card_bg_radius"/>
                        <TextView
                            android:id="@+id/infoFoto1"
                            android:layout_below="@id/foto1"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:textSize="7sp"
                            android:textColor="#12121D"
                            android:text="19 September 2023 | Fuad Adhim"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_toRightOf="@+id/cardFoto1"
                        android:id="@+id/cardFoto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/foto2"
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="133dp"
                            android:layout_height="94dp"
                            android:background="@drawable/card_bg_radius"/>
                        <TextView
                            android:id="@+id/infoFoto2"
                            android:layout_below="@id/foto2"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:textSize="7sp"
                            android:textColor="#12121D"
                            android:text="19 September 2023 | Fuad Adhim"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/cardFoto3"
                        android:layout_toRightOf="@+id/cardFoto2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/foto3"
                            android:layout_marginHorizontal="5dp"
                            android:layout_width="133dp"
                            android:layout_height="94dp"
                            android:background="@drawable/card_bg_radius"/>
                        <TextView
                            android:id="@+id/infoFoto3"
                            android:layout_below="@id/foto3"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:textSize="7sp"
                            android:textColor="#12121D"
                            android:text="19 September 2023 | Fuad Adhim"/>
                    </RelativeLayout>

                </RelativeLayout>
            </HorizontalScrollView>


        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/llJumlahBibit"
                android:weightSum="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/jumlahpanen"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/inputbox_background"
                android:drawablePadding="30dp"
                android:drawableStart="@drawable/logo_padi"
                android:hint="Jumlah Bibit"
                android:textSize="13dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="/Kg"/>
        </LinearLayout>
        <Button
            android:layout_marginTop="10dp"
            android:layout_below="@id/llJumlahBibit"
            android:id="@+id/btnPilihBibit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/green_radius_button"
            android:text="PILIH BIBIT PADI"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_regular"
            android:textSize="11sp"/>
    </RelativeLayout>


</RelativeLayout>