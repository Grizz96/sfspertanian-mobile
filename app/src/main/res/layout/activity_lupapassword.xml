<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".login_email">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow_left_back_foreground"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="26dp"/>

        <RelativeLayout
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:layout_width="88dp"
                android:layout_height="46dp"
                android:background="@drawable/logo_ud_tani_rejo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_bold"
                android:text="UD. Tani Rejo"
                android:textColor="@color/button_green"

                android:textSize="24dp" />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_bold"
        android:text="LUPA KATA SANDI"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="130dp"/>


    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"

        android:orientation="vertical">

        <TextView
            android:id="@+id/txtemail1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Email"
            android:textSize="13dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/TextNama1"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            android:background="@drawable/inputbox_background"
            android:layout_alignParentLeft="true"
            android:hint="Masukkan Email"
            android:textSize="13sp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/inter_regular"
            android:textColor="#000000"/>
            />

        <TextView
            android:id="@+id/txtemail2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Kirim Token"
            android:textSize="13dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnKirimToken"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/corner_button_shadow"
            android:text="Kirim"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/txtpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Konfirmasi Token"
            android:fontFamily="@font/inter_regular"
            android:textSize="13dp"
            android:textStyle="bold" />

        <EditText
            android:paddingLeft="10dp"
            android:paddingRight="2dp"
            android:layout_marginTop="130dp"
            android:id="@+id/masukkantoken"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/inputbox_background"
            android:paddingBottom="5dp"
            android:inputType="textPassword"
            android:fontFamily="@font/inter_regular"
            android:gravity="center_vertical|start"
            android:hint="Masukkan Nomor Token"
            android:textSize="13dp" />

    </RelativeLayout>
    <Button
        android:id="@+id/btnVerify"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="438dp"
        android:background="@drawable/corner_button_shadow"
        android:textStyle="bold"
        android:text="Verifikasi Token"
        android:paddingBottom="5dp"
        android:textColor="@color/white"
        android:onClick="startGetStartedTransition"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>