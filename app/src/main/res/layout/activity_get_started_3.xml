<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_marginTop="122dp"
        android:src="@drawable/logo_get_started_3" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Real Time"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginTop="354dp"
        android:textSize="31dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="Gunakan dimanapun dan kapanpun
tanpa gangguan. Semua ada di genggaman
anda sekarang"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#000000"
        android:layout_marginTop="391dp"
        android:textSize="13sp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="516dp">
        <Button
            android:id="@+id/btnGetStarted2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/gradient_ellipse"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnGetStarted3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="21dp"
            android:background="@drawable/green_elipse"
            android:onClick="nextTransition"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnGetStarted4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="42dp"
            android:background="@drawable/gradient_ellipse"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnGetStarted5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="63dp"
            android:background="@drawable/gradient_ellipse"
            android:textColor="@color/white" />

    </RelativeLayout>
    <Button
        android:id="@+id/btnNext"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="542dp"
        android:background="@drawable/arrow_right_green_elipse"
        android:fontFamily="@font/inter_bold"
        android:onClick="nextTransition"/>



</RelativeLayout>