<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:right="0px" android:left="0px" android:top="4px" android:bottom="0px">
        <shape>
            <solid android:color="#33000000" /> <!-- Warna bayangan -->
            <corners android:radius="50dp" /> <!-- Sudut sudut bulat untuk bayangan -->
        </shape>
    </item>

    <!-- Background Shape -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Warna latar belakang -->
            <corners android:radius="50dp" /> <!-- Sudut sudut bulat untuk latar belakang -->

            <stroke
                android:width="1dp"
            android:color="@color/stroke_grey" />
        </shape>
    </item>

</layer-list>
